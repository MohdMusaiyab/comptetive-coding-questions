#include<bits/stdc++.h>
using namespace std;

int main() {
	// your code goes here
	int t;
	cin>>t;
	while(t--)
	{
	    int n;
	    cin>>n;
	    int arr[n];
	    for(int i=0;i<n;i++)
	    {
	        cin>>arr[i];
	        
	    }
	    sort(arr,arr+n);
	  int m=1e9;
	  for(int i=0;i<n-1;i++)
	  {
	      m=min(m,abs(arr[i]-arr[i+1]));
	  }
	  cout<<m<<endl;

	
	    
}
	return 0;
}
